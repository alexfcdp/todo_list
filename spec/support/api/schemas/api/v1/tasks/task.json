{ 
  "id": "file:/task.json#",
  "type": "object",
  "required": ["id", "type", "attributes", "relationships", "links"],
  "properties": {
    "id": { "type": "string" },
    "type": { "type": "string" },
    "attributes": { 
      "name": { "type": "string" },
      "position": { "type": "integer" },
      "done": { "type": "boolean" },
      "deadline": { "type": "string" },
      "comments_count": { "type": "integer" } 
    },
    "relationships": {
      "type": "object",
      "required": ["comments", "project"],
      "properties": {
        "comments": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": { "$ref": "file:/comment_array.json#" }
            }
          }
        },
        "properties": {
          "project": {
            "type": "object",
            "required": ["data"],
            "properties": {
              "data": { "$ref": "file:/project.json#" }
            }
          }
        }
      }
    },
    "links": { "self": { "type": "string" } }
  }
}
